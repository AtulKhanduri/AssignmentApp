<div class="wrapper fadeInDown">
  <div id="formContent">
    <div class="fadeIn first">
      <%= image_tag 'user-icon.jpg', alt: 'LogIn', width: '180px' %>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="px-4">
        <%= render "/shared/error_messages", resource: resource %>
      </div>

      <div class="form-group px-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg', placeholder: 'Email Address' %>
      </div>

      <div class="form-group px-4">
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control form-control-lg', placeholder: 'Password' %>
      </div>

      <%= f.submit "Log in", class: 'btn btn-primary btn-lg mb-3' %>
    <% end %>

    <%= render '/devise/shared/links' %>
  </div>
</div>
