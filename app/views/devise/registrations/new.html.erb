<div class="wrapper fadeInDown">
  <div id="formContent">
    <div class="fadeIn first">
      <%= image_tag 'user-icon.jpg', alt: 'LogIn', width: '180px' %>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="px-4">
        <%= render "/shared/error_messages", resource: resource %>
      </div>

      <div class="form-group px-4">
        <%= f.text_field :first_name, autofocus: true, class: 'form-control form-control-lg', placeholder: 'First Name' %>
      </div>

      <div class="form-group px-4">
        <%= f.text_field :last_name, class: 'form-control form-control-lg', placeholder: 'Last Name' %>
      </div>

      <div class="form-group px-4">
        <%= f.email_field :email, autocomplete: "email", class: 'form-control form-control-lg', placeholder: 'Email Address' %>
      </div>

      <div class="form-group px-4">
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control form-control-lg', placeholder: 'Password' %>
      </div>

      <div class="form-group px-4">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control form-control-lg', placeholder: 'Password Confirmation' %>
      </div>

      <div class="form-group px-4">
        <%= f.text_field :code, class: 'form-control form-control-lg', placeholder: 'Secret Code' %>
      </div>

      <div class="form-group px-4">
        <%#= f.fields_for :secret_code do |sc_f|%>
          <%#= sc_f.text_field :code, class: 'form-control form-control-lg', placeholder: 'Secret Code' %>
        <%# end %>
      </div>

      <%= f.submit "Sign up", class: 'btn btn-primary btn-lg mb-3' %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
