<%= render "/shared/error_messages" %>

<h2>Secret Code
  <%= link_to "Generate", '/secret_code', method: :post, class: 'btn btn-success float-right' %>
</h2>

<% if @secret_codes.present? %>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Code</th>
          <th>User</th>
        </tr>
      </thead>
      <tbody>
        <% @secret_codes.each do |secret_code| %>
          <tr>
            <td><%= secret_code.code %></td>
            <td><%= secret_code.user&.email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= paginate @secret_codes %>
<% else %>
  No secret code found.
<% end %>
